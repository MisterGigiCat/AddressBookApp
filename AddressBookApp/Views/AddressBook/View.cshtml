@model AddressBookApp.Models.EditAddressViewModel
@{
}
<h1> View for Edit Page</h1>


<form method="post" action="View">
<div class="mb-3 w-50 visually-hidden">
    <label for="" class="form-label">Id</label>
    <input type="text" class="form-control" asp-for="Id" readonly>
 </div>
  <div class="mb-3 w-50">
    <label for="" class="form-label">First Name</label>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
 </div>

   <div class="mb-3 w-50">
    <label for="" class="form-label">Last Name</label>
    <input type="text" class="form-control" asp-for="LastName" placeholder="Enter Last Name">
 </div>

   <div class="mb-3 w-50">
    <label for="" class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="HomeAddress" placeholder="Enter Address">
 </div>

   <div class="mb-3 w-50">
    <label for="" class="form-label">Phone Number</label>
    <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter Phone Number">
 </div>

   <div class="mb-3 w-50">
    <label for="" class="form-label">Birthday</label>
    <input type="date" class="form-control" asp-for="Birthday" placeholder="Enter Date of Birth">
 
</div>

   
  <button type="submit" class="btn btn-primary mt-2 mb-5">Submit</button>
  <button type="submit" class="btn btn-warning mt-2 mb-5" asp-action="Delete" asp-controller="AddressBook">Delete</button>
</form>